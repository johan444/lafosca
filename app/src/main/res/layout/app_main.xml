<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".AppActivity">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="invisible" />


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:weightSum="1">


            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Welcome to La Fosca!"
                android:textColor="#0b84aa"
                android:textSize="20dip" />

            <Button
                android:id="@+id/btnState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Change State" />


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"


                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/greenFlag"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:background="@drawable/green_flag" />

                <ImageButton
                    android:id="@+id/yelFlag"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/yel_flag" />

                <ImageButton
                    android:id="@+id/redFlag"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/red_flag" />
            </LinearLayout>

            <Button
                android:id="@+id/btnClean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Clean Beach"
                android:visibility="invisible" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnState"
                android:layout_centerHorizontal="true"
                android:text="State"
                android:textColor="#0b84aa" />

            <TextView
                android:id="@+id/txtState"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="#372c24" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/beachOpenLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:visibility="invisible"
                android:weightSum="1">

                <Button
                    android:id="@+id/btnNivea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="Nivea Balls" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnState"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Flag"
                    android:textColor="#0b84aa" />

                <TextView
                    android:id="@+id/txtFlag"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textColor="#372c24" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Happiness"
                    android:textColor="#0b84aa" />

                <TextView
                    android:id="@+id/txtHappiness"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textColor="#372c24" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Dirtiness"
                    android:textColor="#0b84aa" />

                <TextView
                    android:id="@+id/txtDirtiness"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textColor="#372c24" />
            </LinearLayout>

            <Button
                android:id="@+id/btnKids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Lost Kids" />
            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginTop="20dp"
                android:id="@+id/imgID"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>
