<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AppActivity">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:weightSum="1">


            <TextView android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to La Fosca!"
                android:gravity="center"
                android:textSize="20dip"
                android:textColor="#0b84aa" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change State"
                android:id="@+id/btnState"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal" />
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:weightSum="1">
                <ImageButton
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:id="@+id/greenFlag"
                    android:background="@drawable/green_flag"/>
                <ImageButton
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:id="@+id/yelFlag"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/yel_flag"
                    />
                <ImageButton
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:id="@+id/redFlag"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/red_flag"
                    />
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clean Beach"
                android:id="@+id/btnClean"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                android:layout_gravity="center_horizontal" />

            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#0b84aa"
                android:text="State"
                android:layout_below="@+id/btnState"
                android:layout_centerHorizontal="true" />

            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:id="@+id/txtState"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:weightSum="1"
                android:id="@+id/beachOpenLayout"
                android:visibility="invisible">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nivea Balls"
                    android:id="@+id/btnNivea"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal" />

                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0b84aa"
                    android:text="Flag"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/btnState"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView" />

                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#372c24"
                    android:id="@+id/txtFlag"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"/>

                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0b84aa"
                    android:text="Happiness"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/textView" />

                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#372c24"
                    android:id="@+id/txtHappiness"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp" />

                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0b84aa"
                    android:text="Dirtiness"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true" />

                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#372c24"
                    android:id="@+id/txtDirtiness"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
